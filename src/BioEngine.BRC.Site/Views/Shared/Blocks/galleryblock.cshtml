@model BioEngine.Core.Web.Models.BlockViewModel<BioEngine.Core.Entities.Blocks.GalleryBlock, BioEngine.Core.Entities.Blocks.GalleryBlockData>

<div class="row">
    @foreach (var picture in Model.Block.Data.Pictures)
    {
        <div class="col-lg-4 col-md-12 mb-3">
            <div class="card gallery-picture p-2">
                <div class="view overlay">
                    <img class="card-img-top" src="@picture.PictureInfo.MediumThumbnail.PublicUri" alt="@picture.FileName">
                    <a href="@picture.PublicUri" target="_blank" title="@picture.FileName">
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>
            </div>
        </div>
    }
</div>
